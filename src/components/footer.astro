---
import { Icon } from "astro-icon";
import HeroImage from "~/components/hero-image.astro";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "https://www.joaopaulo.me/",
    description: "Jo達o Paulo Schiavon website",
    icon: "mdi:home",
  },
  {
    url: "https://github.com/SchiavonJP",
    description: "View Jo達o Paulo Schiavon on GitHub",
    icon: "fa-brands:github-alt",
  },
  {
    url: "https://www.linkedin.com/in/joao-paulo-schiavon/",
    description: "Jo達o Paulo Schiavon on Linkedin",
    icon: "fa-brands:linkedin",
  },
  {
    url: "https://twitter.com/schiavonjp",
    description: "Jo達o Paulo Schiavon on Twitter",
    icon: "fa-brands:twitter",
  },
];
---

<section
  id="footer"
>
<footer class="relative flex h-64 items-center justify-center">
  <div class="absolute inset-0 overflow-hidden opacity-40">
    <HeroImage />
  </div>
  
  <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex h-16 w-16 items-center justify-center rounded-full border-2 border-current p-4"
            href={link.url}
            target="_blank"
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="h-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>

  <p class="absolute bottom-8 text-center gradient-text font-extrabold txt-border text-xl">
    The <span class="text-primary">better</span> 
      we get at getting <span class="text-primary">better</span>, 
      the <span class="text-primary">faster</span> we will get 
      <span class="text-primary">better</span>.
  </p>
</footer>
</section>